#!/usr/bin/env bash

set -e

rm -f /tmp/textpattern.tar.gz

curl -L "https://github.com/textpattern/textpattern/releases/download/${TEXTPATTERN_VERSION}/textpattern-${TEXTPATTERN_VERSION}.tar.gz" \
    --output /tmp/textpattern.tar.gz

mkdir -p /var/www/html/public

tar -xf /tmp/textpattern.tar.gz -C /var/www/html/public/ --strip 1

chown -R "$HOST_UID:$HOST_GID" /var/www/html/

rm -f /tmp/textpattern.tar.gz
